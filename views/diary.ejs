<%-include("partials/header.ejs")%>
    <div class="container">
        <div class="heading-diary">
            <h1>
                <%=username%>
            </h1>
        </div>
        <div class="heading-diary">
            <h1>Diary Entries</h1>
        </div>
        <div class="list-of-entries">
            <div class="list-group">
                <%entries.forEach(function(entry){%>
                    <form action="/entry/<%=username%>/<%=entry.id%>" method="GET">
                        <input type="hidden" name="entryId" value=<%=entry.id%> >
                        <button type="submit" class="list-group-item list-group-item-action" title="Click to edit"><%=entry.title%></button>
                    </form>
                    <%});%>
            </div>
        </div>
        <form action="/write/<%=username%>" method="GET">
            <div class="add-entry-button d-grid gap-2 col-6 mx-auto">
                <button type="submit" class="btn btn-warning">Write an entry</button>
            </div>
        </form>
        <form action="/logout" method="GET">
            <div class="d-grid gap-2 col-6 mx-auto"><button type="submit" class="btn btn-warning">logout</button></div>
        </form>
    </div>
    <%-include("partials/footer.ejs")%>